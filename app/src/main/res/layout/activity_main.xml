<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".TcpNew"
        >
        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff607d8b"
            app:title="Customization Unblock Request"
            app:titleTextColor="#FFFFFF"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:weightSum="6"
                android:layout_marginTop="5dp"

                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Search By Quatation No."
                    android:textStyle="bold"

                    android:textColor="@color/black"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="2"
                    />

                <EditText
                    android:id="@+id/CURequestQNNo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="4"
                    android:background="@drawable/input_shape_1"
                    android:hint=" "
                    android:paddingHorizontal="3dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:weightSum="6"
                android:layout_marginTop="5dp"

                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Branch *"
                    android:textStyle="bold"

                    android:textColor="@color/black"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="2"
                    />

                <Spinner
                    android:id="@+id/CURequest_branch_spinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="4"
                    android:backgroundTint="@color/black"
                    android:hint=" "

                    android:paddingHorizontal="3dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:weightSum="6"
                android:layout_marginTop="5dp"

                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Company Name *"
                    android:textStyle="bold"

                    android:textColor="@color/black"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="2"
                    />

                <EditText
                    android:id="@+id/CURequestCoN"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="4"
                    android:paddingHorizontal="3dp"
                    android:background="@drawable/input_shape_1"
                    android:hint=" " />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:weightSum="6"
                android:layout_marginTop="5dp"

                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Contact Person *"
                    android:textStyle="bold"

                    android:textColor="@color/black"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="2"
                    />

                <EditText
                    android:id="@+id/CURequestCP"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="4"
                    android:paddingHorizontal="3dp"
                    android:background="@drawable/input_shape_1"
                    android:hint=" " />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:weightSum="6"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Contact No *"
                    android:textStyle="bold"

                    android:textColor="@color/black"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="2"
                    />

                <EditText
                    android:id="@+id/CURequestCN"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="4"
                    android:paddingHorizontal="3dp"
                    android:background="@drawable/input_shape_1"
                    android:hint=" " />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="6"
                android:layout_marginTop="5dp"

                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Email Id * (Delivery will be done to this email)"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="2"
                    />

                <EditText
                    android:id="@+id/CURequestEmailId"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="4"
                    android:paddingHorizontal="3dp"
                    android:background="@drawable/input_shape_1"
                    android:hint=" " />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:weightSum="6"
                android:layout_marginTop="5dp"

                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Tally Serial No.* (Max 5 serial no)"
                    android:textStyle="bold"

                    android:textColor="@color/black"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="2"
                    />

                <EditText
                    android:id="@+id/CURequestSN"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="4"
                    android:paddingHorizontal="3dp"
                    android:background="@drawable/input_shape_1"
                    android:hint=" " />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:weightSum="6"
                android:layout_marginTop="5dp"

                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Customization/Project Name *"
                    android:textStyle="bold"

                    android:textColor="@color/black"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="2"
                    />

                <EditText
                    android:id="@+id/CURequestPN"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="4"
                    android:paddingHorizontal="3dp"
                    android:background="@drawable/input_shape_1"
                    android:hint=" " />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:weightSum="6"
                android:layout_marginTop="5dp"

                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Unlock Type"
                    android:textStyle="bold"

                    android:textColor="@color/black"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="2"
                    />

                <EditText
                    android:id="@+id/CURequestUT"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="4"
                    android:paddingHorizontal="3dp"
                    android:background="@drawable/input_shape_1"
                    android:hint=" " />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:weightSum="6"
                android:layout_marginTop="5dp"

                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Requester (Your) Name"
                    android:textStyle="bold"

                    android:textColor="@color/black"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="2"
                    />

                <EditText
                    android:id="@+id/CURequestRN"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="4"
                    android:paddingHorizontal="3dp"
                    android:background="@drawable/input_shape_1"
                    android:hint=" " />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:weightSum="6"
                android:layout_marginTop="5dp"

                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Unlock Request To"
                    android:textStyle="bold"

                    android:textColor="@color/black"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="2"
                    />

                <EditText
                    android:id="@+id/CURequestURT"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="4"
                    android:paddingHorizontal="3dp"
                    android:background="@drawable/input_shape_1"
                    android:hint=" " />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:orientation="horizontal"
                android:weightSum="6"
                android:layout_marginTop="5dp"

                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Requester Contact No (If different from contact person mention above invoice no.)"
                    android:textStyle="bold"
                   android:textColor="@color/black"
                   android:layout_marginHorizontal="3dp"
                    android:layout_weight="2"
                    >

                </TextView>



                <EditText
                    android:id="@+id/CURequestRCN"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="4"
                    android:paddingHorizontal="3dp"
                    android:background="@drawable/input_shape_1"
                    android:hint=" " />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:weightSum="6"
                android:layout_marginTop="5dp"

                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Invoice No"
                    android:textStyle="bold"

                    android:textColor="@color/black"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="2"
                    />

                <EditText
                    android:id="@+id/CURequestIN"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="4"
                    android:paddingHorizontal="3dp"
                    android:background="@drawable/input_shape_1"
                    android:hint=" " />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:weightSum="6"
                android:layout_marginTop="5dp"

                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Invoice Date"
                    android:textStyle="bold"

                    android:textColor="@color/black"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="2"
                    />

                <EditText
                    android:id="@+id/CURequestID"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="4"
                    android:paddingHorizontal="3dp"
                    android:background="@drawable/input_shape_1"
                    android:hint=" " />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="6"
                android:layout_marginTop="5dp"

                >
                <Button
                    android:id="@+id/CURequestSave"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#FF90A4AE"
                    android:text="Save"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>





</ScrollView>
